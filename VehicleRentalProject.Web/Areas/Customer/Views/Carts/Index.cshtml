@model VehicleRentalProject.Web.Models.ViewModels.CartVM

<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Your Cart</h3>
       
        </div>
        @foreach(var item in Model.ListOfCart)
        {
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
               <img src="/@item.Vehicle.VehicleImage"
                  class="img-fluid rounded-3" alt="Truck">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">@item.Vehicle.VehicleNumber</p>
                
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">@item.TotalAmount</h5>
              </div>
            
            </div>
          </div>
        
        </div>
  }
 <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
            <div class="form-outline flex-fill">
             
              <label class="form-label">Total(USD) </label>
            </div>
            <label class="ms-3">@Model.OrderHeader.OrderTotal</label>
          </div>
       
        </div>
<div class="card">
          <div class="card-body p-4 d-flex flex-row">
            <a asp-action="Summary" class="btn btn-warning btn-block btn-lg ms-3">Proceed to Pay</a>
          </div>
       
        </div>

        
        </div>

      </div>
    </div>
  
</section>


