@model VehicleRentalProject.Web.Models.ViewModels.Vehicle.SummaryViewModel
@{
    ViewData["Title"] = "Summary";
}
<form asp-action="Order" method="post">
<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Rent Details of User</h5>
            </div>
            <div class="card-body">
                
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input  type="text" asp-for="@Model.ApplicationUser.FullName" class="form-control" />
                                <label class="form-label" for="form7Example1">Name</label>
                            </div>
                        </div>

                        <div class="form-outline mb-4">
                            <TextArea asp-for="@Model.ApplicationUser.Address" class="form-control" ></TextArea>
                            <label class="form-label" for="form7Example6">Address</label>
                        </div>

                        @*<div class="form-outline mb-4">
                            <textarea class="form-control" asp-for="@Model.OrderHeader.Address" rows="4"></textarea>
                            <label class="form-label" for="form7Example7">Address</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" asp-for="@Model.OrderHeader.City" class="form-control" />
                            <label class="form-label" for="form7Example6">City</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" asp-for="@Model.OrderHeader.State" class="form-control" />
                            <label class="form-label" for="form7Example6">State</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" asp-for="@Model.OrderHeader.PostalCode" class="form-control" />
                            <label class="form-label" for="form7Example6">Postal Code</label>
                        </div>*@
                      
                    </div>




               
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Summary</h5>
            </div>

            <div class="card-body">
                <ul class="list-group list-group-flush">
                    
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <span>@Model.VehicleNumber</span>
                            <span>Return Date :  @String.Format("{0:d}", Model.EndDate) </span>
                            <span>Duration :  @Model.TotalDuration  Days</span>
                        </li>
                   
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Total amount</strong>
                        </div>
                        <span><strong>@Model.TotalAmount INR</strong></span>
                    </li>
                </ul>

                <input value="Submit"  type="submit" class="btn btn-primary btn-lg btn-block" />
                 
            </div>

        </div>
    </div>
</div>
</form>
