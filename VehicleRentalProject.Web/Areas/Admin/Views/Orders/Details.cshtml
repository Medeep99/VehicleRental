                        </div>

                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-1 px-0 pb-0">
                                        <span><b>Vehicle Name :</b>  @item.Vehicle.VehicleName</span><br />
                                        <span><b>Vehicle Number :</b>  @item.Vehicle.VehicleNumber</span><br />
                                        <span><b>Rental Date:</b> @item.StartDate to @item.EndDate </span><br />
                                        <span><b>Daily Price :</b>  @item.Vehicle.DailyRate</span><br />
                                        <div class="text-end"><b>Total:</b> @item.rentalTotal </div>
                                    </li>
                                }
