                        </div>*@
                    </div>

                    <!-- Text input -->
                    @*  <div class="form-outline mb-4">
                    <input type="text" id="form7Example3" class="form-control" />
                    <label class="form-label" for="form7Example3">Company name</label>
                    </div>*@

                    <!-- Text input -->
                    <!-- Email input -->
                    @*<div class="form-outline mb-4">
                    <input type="email" id="form7Example5" class="form-control" />
                    <label class="form-label" for="form7Example5">Email</label>
                    </div>*@

                    <!-- Number input -->
                    <!-- Message input -->



             
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Summary</h5>
            </div>

            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var details in @Model.ListOfCart)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <span>@details.Vehicle.VehicleName</span>
                            <span>Daily Rate : @details.Vehicle.DailyRate
                                <span>Total Amount :  @details.TotalAmount</span>
                                
                                </span>
                            <span></span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Total amount</strong>
                            <strong>
                                <p class="mb-0">(including IVA)</p>
                            </strong>
                        </div>
                        <span><strong>@Model.OrderHeader.OrderTotal USD</strong></span>
                    </li>
                </ul>

                <button  type="submit" class="btn btn-primary btn-lg btn-block">
                    Make purchase
                </button>
            </div>

        </div>
    </div>
</div>
</form>
